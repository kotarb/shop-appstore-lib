<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\OrdersAddress" table="order_addresses">
        <indexes>
            <index name="sort" columns="shop_id, type, lastname, firstname" />
            <index name="order_id" columns="shop_id, order_id" />
        </indexes>

        <unique-constraints>
            <unique-constraint name="type" columns="order_id,type"/>
        </unique-constraints>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="addressId" type="integer" column="address_id" />

        <field name="type" type="boolean" column="type" nullable="false"/>
        <field name="firstname" type="string" column="firstname" length="100" nullable="false"/>
        <field name="lastname" type="string" column="lastname" length="100" nullable="false"/>
        <field name="company" type="string" column="company" length="100" nullable="false"/>
        <field name="taxIdentificationNumber" type="string" column="tax_identification_number" length="50" nullable="false"/>
        <field name="pesel" type="string" column="pesel" length="11" nullable="false"/>
        <field name="city" type="string" column="city" length="100" nullable="false"/>
        <field name="postcode" type="string" column="postcode" length="12" nullable="false"/>
        <field name="street1" type="string" column="street1" length="100" nullable="false"/>
        <field name="street2" type="string" column="street2" length="100" nullable="false"/>
        <field name="state" type="string" column="state" length="100" nullable="false"/>
        <field name="phone" type="string" column="phone" length="100" nullable="false"/>
        <field name="countryCode" type="string" column="country_code" length="2" nullable="false"/>

        <many-to-one field="order" target-entity="DreamCommerce\Model\Shop\Order">
            <join-columns>
                <join-column name="order_id" referenced-column-name="order_id"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="shop" target-entity="DreamCommerce\Model\Shop">
            <join-columns>
                <join-column name="shop_id" referenced-column-name="shop_id"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
