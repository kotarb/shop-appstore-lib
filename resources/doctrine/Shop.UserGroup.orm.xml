<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\UserGroup" table="user_groups">

        <id name="shopId" type="integer" column="shop_id" />
        <id name="groupId" type="integer" column="group_id" />

        <field name="name" type="string" column="name" length="100" nullable="false" />
        <field name="discount" type="float" column="discount" precision="13" scale="2" nullable="false" />
        <field name="priceLevel" type="boolean" column="price_level" nullable="false" />

        <many-to-many field="users" target-entity="DreamCommerce\Model\Shop\User">
            <join-table name="users_groups_users">
                <join-columns>
                    <join-column name="group_id" referenced-column-name="group_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="user_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>