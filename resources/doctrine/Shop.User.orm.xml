<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\User" table="users">

        <indexes>
            <index name="login" columns="shop_id, login" />
            <index name="date" columns="shop_id, date_add" />
            <index name="origin" columns="shop_id, origin" />
        </indexes>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="userId" type="integer" column="user_id" />

        <field name="login" type="string" column="login" length="100" nullable="false"/>
        <field name="dateAdd" type="datetime" column="date_add" nullable="false"/>
        <field name="lastvisit" type="datetime" column="lastvisit" nullable="false"/>
        <field name="verifyEmail" type="boolean" column="verify_email" nullable="false"/>
        <field name="verifyCode" type="string" column="verify_code" length="32" nullable="false"/>
        <field name="origin" type="boolean" column="origin" nullable="false"/>
        <field name="firstname" type="string" column="firstname" length="100" nullable="false"/>
        <field name="lastname" type="string" column="lastname" length="100" nullable="false"/>
        <field name="email" type="string" column="email" length="100" nullable="false"/>
        <field name="discount" type="float" column="discount" precision="13" scale="2" nullable="false"/>
        <field name="newsletter" type="boolean" column="newsletter" nullable="false"/>
        <field name="active" type="boolean" column="active" nullable="false"/>
        <field name="comment" type="text" column="comment" nullable="false"/>

        <many-to-one field="language" target-entity="DreamCommerce\Model\Shop\Language">
            <join-columns>
                <join-column name="language_id" referenced-column-name="language_id"/>
            </join-columns>
        </many-to-one>

        <many-to-many field="groups" target-entity="DreamCommerce\Model\Shop\UserGroup">
            <join-table name="users_groups_users">
                <join-columns>
                    <join-column name="user_id" referenced-column-name="user_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="group_id" referenced-column-name="group_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="shop" target-entity="DreamCommerce\Model\Shop">
            <join-columns>
                <join-column name="shop_id" referenced-column-name="shop_id" />
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
