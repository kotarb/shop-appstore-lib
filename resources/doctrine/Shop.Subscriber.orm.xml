<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\Subscriber" table="subscribers">
        <indexes>
            <index name="language_id" columns="shop_id, language_id" />
            <index name="active_language_id" columns="shop_id, active, language_id" />
        </indexes>

        <unique-constraints>
            <unique-constraint name="subscribers_email" columns="shop_id,email" />
        </unique-constraints>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="subscriberId" type="integer" column="subscriber_id" />

        <field name="email" type="string" column="email" length="255" nullable="false"/>
        <field name="active" type="boolean" column="active" nullable="false"/>
        <field name="verifyCode" type="string" column="verify_code" length="32" nullable="false"/>
        <field name="dateadd" type="datetime" column="dateadd" nullable="false"/>

        <many-to-many field="groups" target-entity="DreamCommerce\Model\Shop\SubscriberGroup">
            <join-table name="subscribers_groups_subscribers">
                <join-columns>
                    <join-column name="subscriber_id" referenced-column-name="subscriber_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="group_id" referenced-column-name="group_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="language" target-entity="DreamCommerce\Model\Shop\Language">
            <join-columns>
                <join-column name="language_id" referenced-column-name="language_id" />
            </join-columns>
        </many-to-one>

        <many-to-one field="shop" target-entity="DreamCommerce\Model\Shop">
            <join-columns>
                <join-column name="shop_id" referenced-column-name="shop_id" />
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
