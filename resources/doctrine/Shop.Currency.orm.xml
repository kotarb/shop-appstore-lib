<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\Currency" table="currencies">
        <indexes>
            <index name="curr_sort" columns="shop_id, active, order" />
            <index name="curr_sort_2" columns="shop_id, order" />
        </indexes>

        <unique-constraints>
            <unique-constraint name="currencies_name" columns="name"/>
        </unique-constraints>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="currencyId" type="integer" column="currency_id" />

        <field name="name" type="string" column="name" length="3" nullable="false"/>
        <field name="rate" type="float" column="rate" precision="10" scale="0" nullable="false"/>
        <field name="order" type="integer" column="order" nullable="false"/>
        <field name="active" type="boolean" column="active" nullable="false"/>
        <field name="rateSync" type="float" column="rate_sync" precision="10" scale="0" nullable="false"/>
        <field name="rateDate" type="date" column="rate_date" nullable="false"/>
        <field name="default" type="boolean" column="default" nullable="false"/>

        <one-to-many target-entity="DreamCommerce\Model\Shop\Order" mapped-by="currency" field="orders">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="DreamCommerce\Model\Shop\Payment" mapped-by="currency" field="payments">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="DreamCommerce\Model\Shop\Product" mapped-by="currency" field="products">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one field="shop" target-entity="DreamCommerce\Model\Shop">
            <join-columns>
                <join-column name="shop_id" referenced-column-name="shop_id"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>