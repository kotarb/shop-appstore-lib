<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\StatusTranslations" table="status_translations">
        <indexes>
            <index name="lang_id" columns="shop_id,lang_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint name="uniq" columns="shop_id,status_id,lang_id"/>
        </unique-constraints>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="transId" type="integer" column="trans_id" />

        <field name="name" type="string" column="name" length="100" nullable="false" />
        <field name="message" type="blob" column="message" nullable="false" />
        <field name="messageHtml" type="blob" column="message_html" nullable="false" />

        <many-to-one field="status" target-entity="DreamCommerce\Model\Shop\Status">
            <join-columns>
                <join-column name="status_id" referenced-column-name="status_id"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="lang" target-entity="DreamCommerce\Model\Shop\Language">
            <join-columns>
                <join-column name="language_id" referenced-column-name="lamguage_id"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
