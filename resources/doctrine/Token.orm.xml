<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="DreamCommerce\Model\Token" table="tokens">

        <indexes>
            <index name="shop_id" columns="shop_id"/>
        </indexes>

        <id name="tokenId" type="integer" column="token_id">
            <generator strategy="IDENTITY" />
        </id>

        <one-to-one field="shop" target-entity="DreamCommerce\Model\Shop" inversed-by="token">
            <join-columns>
                <join-column name="shop_id" referenced-column-name="shop_id" />
            </join-columns>
        </one-to-one>

        <field name="creationDate" column="creation_date" type="datetime" />
        <field name="expirationDate" column="expiration_date" type="datetime" />
        <field name="accessToken" column="access_token" length="50" />
        <field name="refreshToken" column="refresh_token" length="50" />
    </entity>
</doctrine-mapping>
