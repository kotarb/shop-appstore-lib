<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="DreamCommerce\Model\Shop\Status" table="statuses">
        <indexes>
            <index name="s_default" columns="shop_id,default"/>
            <index name="s_active_2" columns="shop_id,active,default"/>
            <index name="active-type" columns="shop_id,active,type,order"/>
            <index name="type" columns="shop_id,type"/>
        </indexes>

        <id name="shopId" type="integer" column="shop_id" />
        <id name="statusId" type="integer" column="status_id" />

        <field name="active" type="boolean" column="active" nullable="false" />
        <field name="default" type="boolean" column="default" nullable="false" />
        <field name="color" type="string" column="color" length="6" nullable="false" />
        <field name="type" type="boolean" column="type" nullable="false" />
        <field name="emailChange" type="boolean" column="email_change" nullable="false" />
        <field name="order" type="integer" column="order" nullable="false" />
    </entity>
</doctrine-mapping>
